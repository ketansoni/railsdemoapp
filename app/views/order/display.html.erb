<div class="container">
  <div><h3>Order Placed Successfully!</h3></div>
  <span>Order Status: <h1><b><%= @order.status %></b></h1></span>
  <div class="well container">
    <table class="table table-striped">
      <tr>
        <td>Customer Name</td>
        <td>Item Name</td>
        <td>Quantity</td>
        <td>Address</td>
      </tr>
      <tr>
        <td><%= @order.customer_name %> </td>
        <td><%= @order.item.name %> </td>
        <td><%= @order.quantity %></td>
        <td><%= @order.address %></td>
      </tr>
    </table>
  </div>
  <div>Please refresh this page to know the status of the shipment</div>
</div>

